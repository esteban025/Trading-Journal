---
import SectionCard from "@/components/SectionCard.astro";
import { getTrades } from "@/services/trades";
const trades = await getTrades();
const header = [
  "Activo",
  "Tipo",
  "Lotaje",
  "Precio Entrada",
  "Precio Salida",
  "Ganancia",
  "Comentario",
];
---

<SectionCard gridName="tradeSpecifications">
  <div class="flex flex-col gap-6">
    <header class="flex items-center justify-between">
      <h2 class="text-xl font-semibold">Especificaciones de Trading</h2>
    </header>
    <section class="trade-specifications">
      <header>
        <div
          class="grid grid-cols-7 gap-4 font-semibold pb-2 border-b border-slate-400"
        >
          {header.map((title) => <span class="text-slate-700">{title}</span>)}
        </div>
      </header>
      <div class="mt-4 flex flex-col gap-4">
        {
          trades.map((trade) => (
            <div class="grid grid-cols-7 gap-4">
              <div>{trade.activo}</div>
              <div>{trade.tipo}</div>
              <div>{trade.lotaje}</div>
              <div>{trade.precio_entrada}</div>
              <div>{trade.precio_salida}</div>
              <div
                class={
                  trade.ganancia >= 0
                    ? "text-green-500 font-semibold"
                    : "text-red-500 font-semibold"
                }
              >
                {trade.ganancia}
              </div>
              <div>{trade.comentario}</div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</SectionCard>
